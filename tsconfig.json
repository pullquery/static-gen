{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "app/**/*"
    ],
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "baseUrl": "src",
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}