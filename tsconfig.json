{
  "compilerOptions": {
    // Target
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    // Dir
    "rootDir": "./src",
    "baseUrl": "./src",
    // Dist
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    // Checking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}